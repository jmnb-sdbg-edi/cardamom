<config>
    <csc name="loadbalancingserver" owner="LoadBalancing" lang="c++" type="validation-test">
        <deliveries>
            <delivery basename="validation_lb_GroupCreator_process" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        ConfAndPlug/cdmwinit
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        LifeCycle/lifecycleidl
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                        lbgroupmanager/lbgroupmanager
                        lbinit/lbinit
                        lbstrategy/lbstrategy
                        lbcommon/lbcommon
                    </libraries>
                <generatedfilesfrom>
                   Main.xml
                </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    TestUtils.cpp
                    mainGroupCreator.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>
                        LoadBalancing
                    </requireidlsfrom>
                </idlfiles>
                  <addcflags>
                     @config.LoadBalancing.ORB.incl@
                    -DENABLE_LB_DEBUG_DUMP
                </addcflags>
                <addldflags>
                    @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="validation_lb_groupMngt_process" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        LifeCycle/lifecycleidl
                        idllib/loadbalancingidl
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        idllib/groupmanageridl
                        lbgroupmanager/lbgroupmanager
                        lbinit/lbinit
                        lbcommon/lbcommon
                        lbstrategy/lbstrategy
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    mainGroupMngt.cpp
                </sourcefiles>
                <idlfiles>
                    <server/>
                    <client/>
                    <requireidlsfrom>
                       LoadBalancing
                       SystemMngt
                    </requireidlsfrom>
                </idlfiles>
                 <addcflags>
                   @config.LoadBalancing.ORB.incl@
		 </addcflags>
                <addldflags>
                    @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="validation_lb_hello_server" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        ConfAndPlug/cdmwinit
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        LifeCycle/lifecycleidl
                        ConfAndPlug/cdmwinit
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                        lbinit/lbinit
                        lbgroupmanager/lbgroupmanager
                        lbstrategy/lbstrategy
                        lbcommon/lbcommon
                     </libraries>
                     <generatedfilesfrom>
                        Main.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    TestHello_impl.cpp
                    mainServer.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>
                        LoadBalancing
                    </requireidlsfrom>
                </idlfiles>
                 <addcflags>
                    @config.LoadBalancing.ORB.incl@	
                  </addcflags>
                <addldflags>
                    @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="loadbalancingservervalidation"
            type="data" visibility="private">
                <sourcefiles>
                    HelloLoadBalancing.xml
                </sourcefiles>
            </delivery>               
          </deliveries>
          </csc>
</config>
