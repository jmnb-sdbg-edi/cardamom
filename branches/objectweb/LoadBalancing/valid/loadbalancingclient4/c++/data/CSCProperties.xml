<config>
    <csc name="loadbalancingclient4" owner="LoadBalancing" lang="c++" type="validation-test">
        <deliveries>
            <delivery basename="cdmw_loadbalancing_client4" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        LifeCycle/lifecycleidl
                        ConfAndPlug/cdmwinit
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                        lbgroupmanager/lbgroupmanager
                        lbinit/lbinit
                        lbcommon/lbcommon
                        lbstrategy/lbstrategy
                        lbinit/lbinit
                   </libraries>
                    <generatedfilesfrom>
                        Main.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    *
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>                        
                        LoadBalancing
                    </requireidlsfrom>
                </idlfiles>
                   <addcflags>
		    -I/tools/exec/TAO-OpenFusion/src/TAO/tao	                    
                    -DENABLE_LB_DEBUG_DUMP
                  </addcflags>
                <addldflags>
                    @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="loadbalancingclient4validation" type="data" visibility="private">
                <sourcefiles>
                    launchLoadBalancingClient4.sh
                </sourcefiles>
            </delivery>               
        </deliveries>
    </csc>
</config>


