<!DOCTYPE System SYSTEM "@cdmw_home@/share/CdmwPlatformMngtSystem.dtd">


<!-- ***************** -->
<!-- System definition -->
<!--                   -->
<!-- ***************** -->
<System Name="system_deployment" Port="21869">

    <!-- Default timeouts for processes of the entire system -->
	<Timeout Init="20000" Run="20000" Stop="20000"/>

    <!-- Default monitorings for the entire system -->
	<Host-monitoring Pull-interval="10000" Pull-timeout="3000"/>
	<App-monitoring  Pull-interval="0" Pull-timeout="0"/>
    <Proc-monitoring Model="NO_MONITORING"
                     Pull-interval="0" Pull-timeout="0"
                     Push-interval="0" Push-timeout="0"/>

    <!-- Services of the system -->
	<Service Name="NamingAndRepositoryService"
             App-name="CardamomServices"
             Process-name="Repository"/>

    <!-- Hosts of the system -->
	<Host
        Name="localhost"
        App-exec-path="./cdmw_platform_application"
        Agent-exec-path="@cdmw_home@/bin/cdmw_platform_agent"
        Probe-exec-path="./cdmw_host_probe"/>

    <!-- ********************** -->
    <!-- Application definition -->
    <!--                        -->
    <!-- ********************** -->
	<Application
        Name="CardamomServices"
        Host-name="localhost"
        Agent-port="-1"
        App-port="-1">

        <!-- ******************* -->
        <!-- Process definitions -->
        <!--                     -->
        <!-- ******************* -->
		<Managed-process
            Name="Repository"
            Host-name="localhost"
            Type="SERVICE-PROVIDER"
            Autoended="FALSE"
            Exec-path="@cdmw_home@/bin/cdmw_naming_and_repository"
            Args="--CdmwProcessPort=42561 --CdmwLocalisationService=42562 --id=GlobalRepository --conf=@prefix@/data/Cdmw_nar.xml"
            Port="-1">
			<Init-step Name="initialisation"/>
		</Managed-process>

        <Unmanaged-process Name="LBManager"
            Host-name="localhost"
            Autoended="FALSE"
			Exec-path="./start_load_manager.sh"
            Args=" -o lm.ior -s RoundRobin "/>
 
        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="LBManager"/>
            <Graph-element Name="Repository"/>

            <Graph-element-root Name="LBManager"/>
            <Graph-element-root Name="Repository"/>
        </Init-graph>

    <!-- ***************************** -->
    <!--                               -->
    <!-- End of application definition -->
    <!-- ***************************** -->
	</Application>

    <!-- ************************************* -->
    <!-- Application definitions of the system -->
    <!--                                       -->
    <!-- ************************************* -->
	<Application
        Name="LBApplication"
        Host-name="localhost"
        Agent-port="21870"
        App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="65000" Run="15000" Stop="15000"/>

		<Managed-process
            Name="ServerProcess1"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./component_server.sh"
            Args="--CdmwXMLFile=@prefix@/data/ComponentServer.xml --validateXML"
            Port="-1">
            <Init-step Name="initialisation" Timeout="100000"/>
		</Managed-process>
                         
        <Managed-process
            Name="ServerProcess2"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./component_server.sh"
            Args="--CdmwXMLFile=@prefix@/data/ComponentServer.xml --validateXML"
            Port="-1">
            <Init-step Name="initialisation" Timeout="100000"/>
		</Managed-process>

        <Managed-process
            Name="ServerProcess3"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./component_server.sh"
            Args="--CdmwXMLFile=@prefix@/data/ComponentServer.xml --validateXML"
            Port="-1">
            <Init-step Name="initialisation" Timeout="100000"/>
		</Managed-process>

		<Managed-process
            Name="lb_group_creator"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="TRUE"
            Exec-path="./lb_group_creator.sh"
            Args="--CdmwXMLFile=@prefix@/data/LBGroupCreator.xml --validateXML  -ORBInitRef LoadManager=file://lm.ior "
            Port="-1">
            <Init-step Name="initialisation" Timeout="100000"/>
		</Managed-process>
                         
        <!-- Init graph of processes of this application -->
        <Init-graph>     
   		    <Graph-element Name="lb_group_creator">
                <Graph-element-successor Name="ServerProcess1"/>
                <Graph-element-successor Name="ServerProcess2"/>
                <Graph-element-successor Name="ServerProcess3"/>
            </Graph-element> 
            
			<Graph-element-root Name="lb_group_creator"/>
 	    </Init-graph>

    <!-- ****************************** -->
    <!--                                -->
    <!-- End of application definitions -->
    <!-- ****************************** -->
	</Application>

    <!-- ************************************* -->
    <!-- Application definitions of the system -->
    <!--                                       -->
    <!-- ************************************* -->
	<Application
        Name="ManualAssembly"
        Host-name="localhost"
        Agent-port="-1"
        App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="65000" Run="15000" Stop="15000"/>

		<Managed-process
            Name="massembly"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="TRUE"
            Exec-path="./massembly.sh"
            Args="--CdmwXMLFile=@prefix@/data/LBGroupCreator.xml --validateXML --lib_dir=@prefix@/@cdmw_platform@  -ORBInitRef LoadManager=file://lm.ior"
            Port="-1">
            <Init-step Name="initialisation" Timeout="100000"/>
		</Managed-process>
                         
        <!-- Init graph of processes of this application -->
        <Init-graph>     
   		    <Graph-element Name="massembly"/>
            
			<Graph-element-root Name="massembly"/>
 	    </Init-graph>

    <!-- ****************************** -->
    <!--                                -->
    <!-- End of application definitions -->
    <!-- ****************************** -->
	</Application>


    <!-- ************************************* -->
    <!-- Application definitions of the system -->
    <!--                                       -->
    <!-- ************************************* -->
	<Application
        Name="ClientApplication"
        Host-name="localhost"
        Agent-port="-1"
        App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="65000" Run="15000" Stop="15000"/>

        <Unmanaged-process Name="ClientProcess"
            Host-name="localhost"
            Autoended="TRUE"
			Exec-path="./client.sh"
            Args=" -ORBInitRef NameService=corbaloc::localhost:42562/NameService "/>

        <!-- Init graph of processes of this application -->
        <Init-graph>     
   		    <Graph-element Name="ClientProcess"/>
            
			<Graph-element-root Name="ClientProcess"/>
 	    </Init-graph>

    <!-- ****************************** -->
    <!--                                -->
    <!-- End of application definitions -->
    <!-- ****************************** -->
	</Application>

    <!-- Init graph of applications of the system-->
    <Init-graph>
        <Graph-element Name="CardamomServices"> 
            <Graph-element-successor Name="LBApplication"/>
        </Graph-element>
        <Graph-element Name="LBApplication"> 
            <Graph-element-successor Name="ManualAssembly"/>
        </Graph-element>

        <Graph-element Name="ManualAssembly"> 
            <Graph-element-successor Name="ClientApplication"/>
        </Graph-element>
    
        <Graph-element-root Name="CardamomServices"/>
    </Init-graph>

<!-- ************************ -->
<!--                          -->
<!-- End of system definition -->
<!-- ************************ -->
</System>
