<config>
    <csc name="testftreplicationmanagerinit" owner="FaultTolerance" lang="c++" type="unit-test">
        <deliveries>
            <delivery basename="cdmw_test_ft_rep_mngt_init" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonsvcsdatastore
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/cosnotificationidl                        
                        Foundation/pullmonitorableidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/logging 
                        Foundation/orbsupport  
                        Foundation/commonsvcsnaming
                        Foundation/pullmonitorableidl                        
                        SystemMngt/smgcommonidl
                        SystemMngt/smginterfaceidl
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        idllib/faulttoleranceidl
                        ftlocationmanager/ftlocationmanager
                        ftreplicationmanager/ftreplicationmanager
                        ftcommon/ftcommon
                        ftrequestlogging/ftrequestlogging
                        ftinit/ftinit
                        ftstatemanager/ftstatemanager
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    ServerCdmwInterface.cpp
                    TestFTInit2.cpp
                    TestUtils.cpp      
                    main.cpp
                </sourcefiles>
                <idlfiles>
                    <server>                         
                        TestHello.idl
                    </server>
                    <client>
                        CdmwLocalFTManager.idl
                    </client>
                    <requireidlsfrom>
                        Foundation
                        FaultTolerance
                        SystemMngt
                    </requireidlsfrom>
                </idlfiles>
                <addldflags>
                    @config.FaultTolerance.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="test_server2" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonsvcsdatastore
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/cosnotificationidl                        
                        Foundation/pullmonitorableidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/logging
                        Foundation/orbsupport       
                        Foundation/commonsvcsnaming                        
                        Foundation/pullmonitorableidl
                        SystemMngt/smgcommonidl
                        SystemMngt/smginterfaceidl
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        idllib/faulttoleranceidl
                        ftlocationmanager/ftlocationmanager
                        ftreplicationmanager/ftreplicationmanager
                        ftcommon/ftcommon
                        ftstatemanager/ftstatemanager
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    OrbThread.cpp
                    ServerCdmwInterface.cpp
                    TestHello_impl.cpp
                    mainServer2.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>                    
                    <client/>
                    <requireidlsfrom>
                        Foundation
                        FaultTolerance
                    </requireidlsfrom>
                </idlfiles>
                <addldflags>
                    @config.FaultTolerance.ORB.Libs@
                </addldflags>
            </delivery>
        </deliveries>
        <runtest>
            <test name="cdmw_test_ft_rep_mngt_init">
                <neededfiles>
                    FaultTolerance/ftreplicationmanager/test/testftreplicationmanagerinit/c++/CdmwFaultToleranceManager_conf.xml
                    FaultTolerance/ftmanager/CdmwFaultToleranceManager.dtd
                </neededfiles>
                <neededprocesses>
                    FaultTolerance/ftmanager/cdmw_ft_manager
                    FaultTolerance/ftreplicationmanager/test/testftreplicationmanagerinit/test_server2
                </neededprocesses>
            </test>
        </runtest>
    </csc>
</config>

