<config>
    <csc name="lbgroupmanager" owner="LoadBalancing" lang="c++">
        <deliveries>
            <delivery basename="cdmw_lb_group_admin" type="exe" visibility="public">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/naminginterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformidl
                        SystemMngt/systemmngtidl
                        lbcommon/lbcommon
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    LBGroupManager_impl.cpp
                    LBGroupAdmin.cpp
                </sourcefiles>
                <idlfiles>
                 <server />
                 <client />
                    <requireidlsfrom>
                        Foundation
                        LoadBalancing
                        SystemMngt
                    </requireidlsfrom>
                </idlfiles>
                <addcflags>
                       @config.LoadBalancing.ORB.incl@
                </addcflags>
                <addldflags>
                       @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="lbgroupmanager" type="lib" visibility="public">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/naminginterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformidl
                        SystemMngt/systemmngtidl
                        lbcommon/lbcommon
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    LBGroupManager_impl.cpp
                </sourcefiles>
                <idlfiles>
                 <server />
                 <client />
                    <requireidlsfrom>
                        Foundation
                        LoadBalancing
                        SystemMngt
                    </requireidlsfrom>
                </idlfiles>
                <addcflags>
	              @config.LoadBalancing.ORB.incl@ 
                </addcflags>
                <addldflags>
                       @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="start_lb_group_manager_observer" type="exe" visibility="public">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/naminginterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformidl
                        SystemMngt/systemmngtidl
                        lbcommon/lbcommon
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                        lbgroupmanager/lbgroupmanager
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    LBGroupManagerSupervisionObserver.cpp
                </sourcefiles>
                <idlfiles>
                 <server />
                 <client />
                    <requireidlsfrom>
                        Foundation
                        LoadBalancing
                        SystemMngt
                    </requireidlsfrom>
                </idlfiles>
                <addcflags>
	             @config.LoadBalancing.ORB.incl@   
                </addcflags>
                <addldflags>
                       @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
        </deliveries>
    </csc>
</config>

