<config>
    <csc name="testlbinit" owner="LoadBalancing" lang="c++" type="unit-test">
        <deliveries>
            <delivery basename="cdmw_test_lb_init" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Repository/naminginterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/platformidl
                        SystemMngt/systemmngtidl
                        idllib/loadbalancingidl
                        idllib/groupmanageridl
                        lbgroupmanager/lbgroupmanager
                        lbinit/lbinit
                        lbstrategy/lbstrategy
                        lbcommon/lbcommon
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    TestLBInit.cpp
                    TestUtils.cpp
                    CORBAManager.cpp
                    UserDefinedStrategy_impl.cpp
                    UserDefinedStrategyFactory_impl.cpp
                    main.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>
                        LoadBalancing
                    </requireidlsfrom>
                </idlfiles>
                  <addcflags>
                    @config.LoadBalancing.ORB.incl@
                    -DENABLE_LB_DEBUG_DUMP
                </addcflags>
                <addldflags>
                    @config.LoadBalancing.ORB.Libs@
                </addldflags>
            </delivery>
