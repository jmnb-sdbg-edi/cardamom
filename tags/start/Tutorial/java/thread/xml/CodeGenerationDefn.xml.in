<cdmw>

   <factories>
   
      <factory kind="NAMED" 
               idl-interface="HelloEntityFactoryModule.HelloEntityFactory"
               idl-filename="HelloEntityFactory.idl">
         <servant-provider classname="cdmw.tutorial.HelloServantProvider"/>
         <idl-search-dir>@prefix@/idl</idl-search-dir>
         <idl-search-dir>@cdmw_home@/idl</idl-search-dir>
         <idl-search-dir>@jacorb_idl@/jacorb</idl-search-dir>
         <idl-search-dir>@jacorb_idl@/omg</idl-search-dir>
      </factory>
      
   </factories>
   
   <lifecycle-frameworks>
   
      <lifecycle-framework id="entity.framework"
                           factory-idref="HelloEntityFactoryModule.HelloEntityFactory">
         <factory-impl category="ENTITY"
                       classname="cdmw.tutorial.HelloEntityFactoryImpl"
                       threading="MULTITHREAD">
            <servant-provider-allocator classname="cdmw.tutorial.USPAllocator"/>
         </factory-impl>
      </lifecycle-framework>
      
   </lifecycle-frameworks>
   
   <programs>
   
      <program filename="HelloClientCdmwInterface"
               init-dtd="Client_Desc.dtd">
         <services>
            <repository-interface/>
            <trace/>
         </services>
      </program>
      
      <program filename="HelloServerCdmwInterface"
               init-dtd="Server_Desc.dtd">
         <services>
            <repository-interface/>
            <trace/>
            <lifecycle>
               <framework idref="entity.framework" occurrences="1"/>
            </lifecycle>
         </services>
      </program>
      
   </programs>
</cdmw>
