<!DOCTYPE corbacomponent SYSTEM "corbacomponent.dtd">

<corbacomponent>
    <corbaversion>3.0</corbaversion>
    
    <componentrepid repid="IDL:thalesgroup.com/BasicDemo/Client:1.0"/>
    <homerepid repid="IDL:thalesgroup.com/BasicDemo/ClientHome:1.0"/>
    
    <componentkind>
        <process>
            <servant lifetime="container"/>
        </process>
    </componentkind>
    
    <threading policy="serialize"/>
    <configurationcomplete set="false"/>
    
    <homefeatures name="Client" repid="IDL:thalesgroup.com/BasicDemo/ClientHome:1.0">
        <extension class="HOME_SERVANT_CLASSNAME" origin="Cdmw">ClientHome_impl</extension>
    </homefeatures>
    
    <componentfeatures name="Client" repid="IDL:thalesgroup.com/BasicDemo/Client:1.0">
        <ports>
            <uses usesname="to_server" repid="IDL:thalesgroup.com/BasicDemo/Display:1.0"/>
            <uses usesname="to_register" repid="IDL:thalesgroup.com/BasicDemo/Registration:1.0"/>
        </ports>
    </componentfeatures>
    
    <interface name="Registration" repid="IDL:thalesgroup.com/BasicDemo/Registration:1.0"/>
    <interface name="Display" repid="IDL:thalesgroup.com/BasicDemo/Display:1.0"/>

</corbacomponent>

