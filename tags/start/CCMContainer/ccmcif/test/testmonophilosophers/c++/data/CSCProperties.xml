<config>
    <csc name="testmonophilosophers" owner="CCMContainer" lang="c++" type="unit-test">
        <deliveries>
            <delivery basename="Philo" type="lib" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/ossupport
                        Foundation/orbsupport
                        CCMContainer/ccmcontaineridl
                    </libraries>
                    <generatedfilesfrom>
                        DinnerExecutor.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    CCM_PhilosopherHome_impl.cpp
                    CCM_Philosopher_impl.cpp
                    CCM_Fork_impl.cpp
                    CCM_ObserverHome_impl.cpp
                    CCM_Observer_impl.cpp
                    StatusInfo_impl.cpp
                    CCM_ForkHome_impl.cpp                    
                    CCM_ForkManager_impl.cpp
                    CCM_RegistratorHome_impl.cpp
                    CCM_Registrator_impl.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        Philo_cif.idl
                        UserPhilo.idl
                    </server>
                    <client/>
                </idlfiles>
            </delivery>
            <delivery basename="main" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        Foundation/testutils
                        Repository/naminginterface
                        Repository/repositoryinterface
                        Repository/repositoryidl
                        LifeCycle/lifecycle
                        LifeCycle/lifecycleidl
                        Event/eventidl
                        Event/eventinterface
                        CCMContainer/ccmcommon
                        CCMContainer/ccmcontainer
                        CCMContainer/ccmcontaineridl
                        CCMContainer/ccmcif
                        ConfAndPlug/cdmwinit
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platforminterface
                        SystemMngt/platformlibrary
                        SystemMngt/platformvaluetypes
                        SystemMngt/processadmintools
                        ccmcif/test/testmonophilosophers/Philo
                    </libraries>
                    <generatedfilesfrom>
                        ComponentServer.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    ClientThread.cpp
                    TestPhilo.cpp
                    TestTypedPhilo.cpp
                    NonCdmwStatusInfoConsumer_impl.cpp
                    main.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        Cdmw_Philo_cif.idl
                    </server>
                    <client/>
                </idlfiles>
                <addldflags>
                    -l@config.CCMContainer.ORB.Lib.Prefix@CosProperty @config.CCMContainer.ORB.Libs@
                </addldflags>
            </delivery>
        </deliveries>
        <runtest>
            <test name="main" nbtestable="10">
                <neededfiles>
                    Event/eventchannelmanager/EventChannelManager_Desc.dtd
                    CCMContainer/ccmcif/test/testmonophilosophers/c++/EventChannelManager.xml
                    CCMContainer/ccmcif/test/testmonophilosophers/c++/EventChannel_Desc.dtd
                    CCMContainer/ccmcif/test/testmonophilosophers/c++/EventChannelConf1.xml
                    CCMContainer/ccmcif/test/testmonophilosophers/c++/obtest.conf
                </neededfiles>
                <neededprocesses>
                    Repository/simrepository/cdmw_simulated_repository
                    Event/eventchannelmanager/cdmw_event_channel_manager
                </neededprocesses>
            </test>
        </runtest>
    </csc>
</config>


