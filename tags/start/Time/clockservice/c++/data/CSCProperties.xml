<config>
    <csc name="clockservice" owner="Time" lang="c++">
        <deliveries>
            <delivery basename="clockservice" type="lib" visibility="public">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/orbsupport
                        Foundation/commonsvcs
                        Foundation/commonidl
                    </libraries>
                </prerequisites>
                <sourcefiles>
                    ClockCatalog_impl.cpp
                    Clock_impl.cpp
                    config.cpp
                    ControlledClock_impl.cpp
                    ControlledExecutor_impl.cpp
                    Controller_impl.cpp
                    Date.cpp
                    Executor_impl.cpp
                    IClock.cpp
                    Time.cpp
                    TimeSpan_impl.cpp
                    UTC_impl.cpp
                    UTCTimeService_impl.cpp
                    Util.cpp
			Macro.cpp
                        FederatedControlledClockDataEncoder.cpp
                        FederatedControlledClock_impl.cpp
                        ClockUpdateCommands.cpp
                        FederatedControlledClockSvc.cpp
		</sourcefiles>
		<idlfiles>
		<server>
			CosClockService.idl  
			CosPropertyService.idl  
			CdmwClockState.idl
			CdmwTime.idl
		</server>
		<client>
		</client>
		<requireidlsfrom>
			Foundation
        </requireidlsfrom>
		</idlfiles>
		<addcflags>
                        @config.Time.ORB.incl@
		</addcflags>
                <addldflags>
                    -l@config.Time.ORB.Lib.Prefix@CosProperty -l@config.Time.ORB.Lib.Prefix@IORTable -luuid
                </addldflags>
                <addidlflags>
                        @config.Time.ORB.incl@
                </addidlflags>
            </delivery>
		    <delivery basename="ftclockservice" type="lib" visibility="public">
                <condition antfile="Conditions.xml" target="-check-FaultTolerance">
                    <prerequisites>
                        <libraries>
                            FaultTolerance/monitoringidl
                            FaultTolerance/ftstatemanager
                            Foundation/common
                            Foundation/orbsupport
                            Foundation/commonidl
                            FaultTolerance/faulttoleranceidl
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        *
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            CdmwClockState.idl
                        </server>
                        <client>
                        </client>
                    </idlfiles>
                    <addcflags>
                        @config.Time.ORB.incl@
                    </addcflags>
                <addidlflags>
                        @config.Time.ORB.incl@
                </addidlflags>
                </condition>
            </delivery>               
        </deliveries>
        <inspection>
            <qualification id="Q-063">
                <files>
                    Clock_impl.cpp
                </files>
            </qualification>
        </inspection>
    </csc>
</config>


