<!DOCTYPE System SYSTEM "CdmwPlatformMngtSystem.dtd">

<!-- ***************** -->
<!-- System definition -->
<!--                   -->
<!-- ***************** -->
<System Name="validation" Port="21869">

    <!-- Default timeouts for processes of the entire system -->
    <Timeout Init="20000" Run="20000" Stop="20000"/>

    <!-- Default monitorings for the entire system -->
    <Host-monitoring Pull-interval="10000" Pull-timeout="3000"/>
    <App-monitoring  Pull-interval="0" Pull-timeout="0"/>
    <Proc-monitoring Model="NO_MONITORING"
                     Pull-interval="0" Pull-timeout="0"
                     Push-interval="0" Push-timeout="0"/>

    <!-- Services of the system -->
    <Service Name="NamingAndRepositoryService"
             App-name="CdmwServices"
             Process-name="Repository"/>


    <!-- Hosts of the system -->
    <Host Name="@hostname1val@"
          App-exec-path="cdmw_platform_application"
          Agent-exec-path="cdmw_platform_agent"/>
    <Host Name="@hostname2val@"
          App-exec-path="cdmw_platform_application"
          Agent-exec-path="cdmw_platform_agent"/>
    <Host Name="@hostname3val@"
          App-exec-path="cdmw_platform_application"
          Agent-exec-path="cdmw_platform_agent"/>

    <!-- ********************** -->
    <!-- Application definition -->
    <!--                        -->
    <!-- ********************** -->
    <Application
                 Name="CdmwServices"
                 Host-name="@hostname1val@"
                 Agent-port="-1"
                 App-port="-1">

        <Managed-process
                         Name="Repository"
                         Host-name="@hostname1val@"
                         Type="SERVICE-PROVIDER"
                         Autoended="FALSE"
                         Exec-path="cdmw_naming_and_repository"
                         Args="--CdmwProcessPort=42561 --CdmwLocalisationService=42562 --id=GlobalRepository --conf=cdmw_nar_integ.xml"
                         Port="-1">
            <Init-step Name="initialisation"/>
        </Managed-process>

        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="Repository"/>

            <Graph-element-root Name="Repository"/>
        </Init-graph>

        <!-- ***************************** -->
        <!--                               -->
        <!-- End of application definition -->
        <!-- ***************************** -->
    </Application>


    <!-- ************************************* -->
    <!-- Application definitions of the system -->
    <!--                                       -->
    <!-- ************************************* -->
    <Application
                 Name="APPL1"
                 Host-name="@hostname1val@"
                 Agent-port="21874"
                 App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="20000" Run="20000" Stop="20000"/>

        <Managed-process
                         Name="P11"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server --client_interceptor=prepare --where=reply --count=2 --HotRestart"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
        
        <Managed-process
                         Name="P12"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server --client_interceptor=commit --where=reply --count=2 --ColdRestart"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
                         Name="P13"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server "
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
    </Application>


    <Application
                 Name="APPL2"
                 Host-name="@hostname2val@"
                 Agent-port="21875"
                 App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="20000" Run="20000" Stop="20000"/>

        <Managed-process
                         Name="P21"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
        
        <Managed-process
                         Name="P22"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
                         Name="P23"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server --server_interceptor=prepare --where=reply --count=1"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

    </Application>


    <Application
                 Name="APPL3"
                 Host-name="@hostname3val@"
                 Agent-port="21876"
                 App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="20000" Run="20000" Stop="20000"/>

        <Managed-process
                         Name="P31"
                         Host-name="@hostname3val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
        
        <Managed-process
                         Name="P32"
                         Host-name="@hostname3val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
                         Name="P33"
                         Host-name="@hostname3val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="testftstatetransfer2"
                         Args=" --CdmwXMLFile=Q-039-data/HelloFaultTolerance2.xml --validateXML --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --server"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
    </Application>


    <Application
                 Name="APPL4"
                 Host-name="@hostname3val@"
                 Agent-port="21877"
                 App-port="-1">

        <!-- Default timeouts for processes of the entire system -->
        <Timeout Init="20000" Run="20000" Stop="20000"/>

        <Unmanaged-process
                         Name="P41"
                         Host-name="@hostname1val@"
                         Autoended="TRUE"
                         Exec-path="testftstatetransfer2"
                         Args=" --fault_manager=corbaloc::@hostname1val@:4555/fault_manager --host1=@hostname1val@ --host2=@hostname2val@ --host3=@hostname3val@ "/>


        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="P41">
            </Graph-element>
            <Graph-element-root Name="P41"/>
        </Init-graph>


        <!-- ****************************** -->
        <!--                                -->
        <!-- End of application definitions -->
        <!-- ****************************** -->
    </Application>

    <!-- Init graph of applications of the system-->
    <Init-graph>
        <Graph-element Name="CdmwServices"> 
            <Graph-element-successor Name="APPL4"/>
        </Graph-element>
        <Graph-element Name="APPL4"> 
        </Graph-element>
        <Graph-element-root Name="CdmwServices"/>
    </Init-graph>

    
    <!-- ************************ -->
    <!--                          -->
    <!-- End of system definition -->
    <!-- ************************ -->
</System>

