<!DOCTYPE System SYSTEM "@cdmw_home@/share/CdmwPlatformMngtSystem.dtd">

<!-- ***************** -->
<!-- System definition -->
<!--                   -->
<!-- ***************** -->
<System Name="PERF" Port="@SystemMngt_port@">

	<!-- Default timeouts for processes of the entire system -->
	<Timeout Init="20000" Run="20000" Stop="20000"/>
	<!-- Default monitorings for the entire system -->
	<Host-monitoring Pull-interval="1000" Pull-timeout="1500"/>
	<App-monitoring Pull-interval="060" Pull-timeout="070"/>
	<Proc-monitoring Model="NO_MONITORING" 
	                 Pull-interval="021" Pull-timeout="031" 
	                 Push-interval="041" Push-timeout="051"/>
	
	<!-- Hosts of the system -->
	<Host Name="@hostname@" App-exec-path="@cdmw_home@/bin/cdmw_platform_application" 
                           Agent-exec-path="@cdmw_home@/bin/cdmw_platform_agent">
		<Host-monitoring Pull-interval="2000" 
                         Pull-timeout="2500"/>
	</Host>

	<!-- Hosts of the system -->
	<Host Name="@hostname2@" App-exec-path="@cdmw_home@/bin/cdmw_platform_application" 
                           Agent-exec-path="@cdmw_home@/bin/cdmw_platform_agent">
		<Host-monitoring Pull-interval="2000" 
                         Pull-timeout="2500"/>
	</Host>

	<!-- Hosts of the system -->
	<Host Name="@hostname3@" App-exec-path="@cdmw_home@/bin/cdmw_platform_application" 
                           Agent-exec-path="@cdmw_home@/bin/cdmw_platform_agent">
		<Host-monitoring Pull-interval="2000" 
                         Pull-timeout="2500"/>
	</Host>

	<!-- ********************** -->
	<!-- Application definition -->
	<!--                        -->
	<!-- ********************** -->
	<Application Name="CdmwServices" Host-name="@hostname@" Agent-port="-1" App-port="-1">

		<!-- Default timeouts for processes of this application -->
		<Timeout Init="2000000" Run="2000000" Stop="2000000"/>

		<!-- Monitoring of this application -->
		<App-monitoring Pull-interval="021" Pull-timeout="031"/>

		<!-- ******************* -->
		<!-- Process definitions -->
		<!--                     -->
		<!-- ******************* -->
		<Managed-process Name="Repository" Host-name="@hostname@" 
                         Type="SERVICE-PROVIDER" Autoended="FALSE" 
                         Exec-path="@cdmw_home@/bin/cdmw_naming_and_repository" 
                         Args="--CdmwProcessPort=42561 --CdmwLocalisationService=42562 
                               --id=GlobalRepository --conf=@prefix@/data/Cdmw_nar.xml --trace" 
                         Port="-1">
			<Init-step Name="initialisation" Timeout="10000"/>
			<Run-timeout Timeout="10000"/>
			<Stop-timeout Timeout="10000"/>
		</Managed-process>

		<Unmanaged-process Name="GroupManager" Host-name="@hostname@"
                         Autoended="FALSE"
                         Exec-path="@cdmw_home@/bin/cdmw_lb_group_manager"
			 Args="--CdmwLBXMLFile=../data/CdmwLBGroupManager_conf.xml"
			 Run-dir="@prefix@/run"
             Port="-1"/>

		<!-- ************************** -->
		<!--                            -->
		<!-- End of process definitions -->
		<!-- ************************** -->

		<!-- Init graph of processes of this application -->
		<Init-graph>
			<Graph-element Name="Repository">
			   <Graph-element-successor Name="GroupManager"/> 
			</Graph-element>
			<Graph-element-root Name="Repository"/>
		</Init-graph>

		<!-- Stop graph of processes of this application -->
		<Stop-graph>
			<Graph-element Name="GroupManager">
			   <Graph-element-successor Name="Repository"/> 
			</Graph-element>
			<Graph-element-root Name="GroupManager"/>
		</Stop-graph>
 		
		<!-- ***************************** -->
		<!--                               -->
		<!-- End of application definition -->
		<!-- ***************************** -->
	</Application>
    
	<!-- ********************** -->
	<!-- Application definition -->
	<!--                        -->
	<!-- ********************** -->
	<Application Name="LBPerfApplication" 
	             Host-name="@hostname@" 
	             Agent-port="-1" 
	             App-port="-1">
	             
		<!-- Default timeouts for processes of this application -->
		<Timeout Init="20000" Run="20000" Stop="20000"/>
		
		<!-- Monitoring of this application -->
		<App-monitoring Pull-interval="021" Pull-timeout="031"/>
		
		<!-- ******************* -->
		<!-- Process definitions -->
		<!--                     -->
		<!-- ******************* -->
		
		<Unmanaged-process Name="HelloServer1" Host-name="@hostname@"
                         Autoended="FALSE"
                         Exec-path="@prefix@/@cdmw_platform@/hello_server"
			 Args="--namingRepos-url=corbaloc::@hostname@:42562/CdmwRepository --ReplicaName=server1 --HostName=@hostname@"
			 Run-dir="@prefix@/run"
             Port="-1"/>

		<Unmanaged-process Name="HelloServer2" Host-name="@hostname2@"
                         Autoended="FALSE"
                         Exec-path="@prefix@/@cdmw_platform@/hello_server"
			 Args="--namingRepos-url=corbaloc::@hostname@:42562/CdmwRepository --ReplicaName=server2 --HostName=@hostname2@"
			 Run-dir="@prefix@/run"
             Port="-1"/>

		<Unmanaged-process Name="HelloServer3" Host-name="@hostname3@"
                         Autoended="FALSE"
                         Exec-path="@prefix@/@cdmw_platform@/hello_server"
			 Args="--namingRepos-url=corbaloc::@hostname@:42562/CdmwRepository --ReplicaName=server3 --HostName=@hostname3@"
			 Run-dir="@prefix@/run"
             Port="-1"/>

             <Unmanaged-process Name="BindReplicas" Host-name="@hostname@"
                         Autoended="TRUE"
                         Exec-path="@prefix@/@cdmw_platform@/bind_replicas"
  			 Args="--ReplicaName1=server1 --ReplicaName2=server2 --ReplicaName3=server3 --namingRepos-url=corbaloc::@hostname@:42562/CdmwRepository --GroupMng-url=corbaloc::@hostname@:5040/group_mgr"
			 Run-dir="@prefix@/run"
             Port="-1"/>

		 <Unmanaged-process Name="PingClient" Host-name="@hostname@"
                         Autoended="TRUE"
                         Exec-path="@prefix@/@cdmw_platform@/client"
  			 Args="--namingRepos-url=corbaloc::@hostname@:42562/CdmwRepository --ReplicaName=server2"
			 Run-dir="@prefix@/run"
             Port="-1"/>

        <!-- ************************** -->
		<!--                            -->
		<!-- End of process definitions -->
		<!-- ************************** -->
		
		<!-- Init graph of processes of this application -->
		<Init-graph>
			<Graph-element Name="HelloServer1">
			   <Graph-element-successor Name="HelloServer2"/>
			   <Graph-element-successor Name="HelloServer3"/>
			   <Graph-element-successor Name="BindReplicas"/>
			   <Graph-element-successor Name="PingClient"/>
			</Graph-element>
			<Graph-element-root Name="HelloServer1"/>
		</Init-graph>

		<!-- Stop graph of processes of this application -->
		<Stop-graph>
			<Graph-element Name="PingClient">
			   <Graph-element-successor Name="BindReplicas"/> 
			   <Graph-element-successor Name="HelloServer3"/>
			   <Graph-element-successor Name="HelloServer2"/> 
			   <Graph-element-successor Name="HelloServer1"/> 
			</Graph-element>
			<Graph-element-root Name="PingClient"/>
		</Stop-graph>
 		
		<!-- ***************************** -->
		<!--                               -->
		<!-- End of application definition -->
		<!-- ***************************** -->
	</Application>
	
	<!-- Init graph of applications of the system-->
	<Init-graph>
		<Graph-element Name="CdmwServices">
			<Graph-element-successor Name="LBPerfApplication"/>
		</Graph-element>
		<Graph-element-root Name="CdmwServices"/>
	</Init-graph>
	
	<!-- Stop graph of applications of the system-->
	<Stop-graph>
		<Graph-element Name="LBPerfApplication">
			<Graph-element-successor Name="CdmwServices"/>
		</Graph-element>
		<Graph-element-root Name="LBPerfApplication"/>
	</Stop-graph>
</System>

<!-- ************************ -->
<!--                          -->
<!-- End of system definition -->
<!-- ************************ -->
