<config>
    <csc name="testccmcif" owner="CCMContainer" lang="java" type="unit-test">
        <deliveries>
            <delivery basename="BasicDemo" type="lib" visibility="private">
                <condition antfile="Conditions.xml" target="-check-not-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/testutils
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcontaineridl
                        </libraries>
                        <generatedfilesfrom>
                            BasicExecutor.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        CCMClientImpl.java
                        EventFactoryImpl.java
                        EventImpl.java
                        CCMDisplayImpl.java
                        CCMClientHomeImpl.java
                        CCMServerImpl.java
                        CCMServerHomeImpl.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Basic_cif.idl
                            UserBasicDemo.idl
                        </server>
                        <client/>
                        <tie>
                            Basic_cif.idl
                        </tie>
                        <requireidlsfrom>
                            CCMContainer
                        </requireidlsfrom>
                    </idlfiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/testutils
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcontaineridl
                        </libraries>
                        <generatedfilesfrom>
                            BasicExecutor.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        CCMClientImpl.java
                        EventFactoryImpl.java
                        EventImpl.java
                        CCMDisplayImpl.java
                        CCMClientHomeImpl.java
                        CCMServerImpl.java
                        CCMServerHomeImpl.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Basic_cif.idl
                            UserBasicDemo.idl
                        </server>
                        <client/>
                        <tie>
                            Basic_cif.idl
                        </tie>
                        <requireidlsfrom>
                            CCMContainer
                        </requireidlsfrom>
                    </idlfiles>
                    <addidlflags>
                        -i2jpackagefile @this.csc.data.dir@${FS}package.txt
                    </addidlflags>
                </condition>
            </delivery>
            <delivery basename="main" type="exe" visibility="private">
                <condition antfile="Conditions.xml" target="-check-not-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/orbsupport
                            Foundation/testutils
                            LifeCycle/lifecycle
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcommon
                            CCMContainer/ccmcontainer
                            CCMContainer/ccmcontaineridl
                            CCMContainer/ccmcif
                            CCMContainer/ccmdeploymentutil
                            ConfAndPlug/cdmwinit
                            Event/eventidl
                            Repository/simrepository
                            ccmcif/test/testccmcif/BasicDemo
                            SystemMngt/systemmngtidl
                        </libraries>
                        <generatedfilesfrom>
                            ComponentServer.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        EventImpl.java
                        ClientThread.java
                        BasicDemoTest.java
                        TypedBasicDemoTest.java
                        MainTest.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Cdmw_Basic_cif.idl
                        </server>
                        <client/>
                        <tie>
                            Cdmw_Basic_cif.idl
                        </tie>
                    </idlfiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/orbsupport
                            Foundation/testutils
                            LifeCycle/lifecycle
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcommon
                            CCMContainer/ccmcontainer
                            CCMContainer/ccmcontaineridl
                            CCMContainer/ccmcif
                            CCMContainer/ccmdeploymentutil
                            ConfAndPlug/cdmwinit
                            Event/eventidl
                            Repository/simrepository
                            ccmcif/test/testccmcif/BasicDemo
                        </libraries>
                        <generatedfilesfrom>
                            ComponentServer.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        EventImpl.java
                        ClientThread.java
                        BasicDemoTest.java
                        TypedBasicDemoTest.java
                        MainTest.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Cdmw_Basic_cif.idl
                        </server>
                        <client/>
                        <tie>
                            Cdmw_Basic_cif.idl
                        </tie>
                    </idlfiles>
                    <addidlflags>
                        -i2jpackagefile @this.csc.data.dir@${FS}package.txt
                    </addidlflags>
                </condition>
            </delivery>
        </deliveries>
        <runtest>
            <condition antfile="Conditions.xml" target="-check-not-JacORB">
                <test name="main" nbtestable="4">
                    <neededfiles>
                        Event/eventchannelmanager/EventChannelManager_Desc.dtd
                    </neededfiles>
                    <neededjarfiles>
                        Event/eventchannelmanager/eventchannelmanager
                    </neededjarfiles>
                </test>
            </condition>
            <condition antfile="Conditions.xml" target="-check-JacORB">
                <test name="main" nbtestable="4">
                    <neededfiles>
                        Event/eventchannelmanager/EventChannelManager_Desc.dtd
                    </neededfiles>
		    <neededprocesses>
                        Event/eventchannelmanager/cdmw_event_channel_manager
                    </neededprocesses>  
                </test>
            </condition>
        </runtest>        
    </csc>
</config>


