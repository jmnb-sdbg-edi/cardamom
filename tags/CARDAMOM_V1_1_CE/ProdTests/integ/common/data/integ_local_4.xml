<!--Cdmw deployment file for integration test:-->
<!--Cdmw Repository launched with traces enabled -->
<!--One application that serves as the Cdmw Repository's trace collector-->
<!--A second application that launches the functional test of the NamingInterface-->
<!DOCTYPE System SYSTEM "CDMW-System-Deployment.dtd">

<System Name="Integration">
	<Hosts>
		<Host Name="localhost">
			<Root>..</Root>
			<Program-definition>
				<Program-name>PlatformAgent</Program-name>
				<Path>/exec/platformagent</Path>
			</Program-definition>
			<Program-definition>
				<Program-name>NamingAndRepository</Program-name>
				<Path>/exec/NamingAndRepository</Path>
			</Program-definition>
			<Process-definition type="ApplicationAgent" Repository="REPOSITORY">
				<Process-name>Agent</Process-name>
				<Program-name>PlatformAgent</Program-name>
				<Rundir>/data</Rundir>
			</Process-definition>
			<Process-definition type="Repository" Repository="REPOSITORY">
				<Process-name>Repository</Process-name>
				<Program-name>NamingAndRepository</Program-name>
				<Arguments>--id=GlobalRepository --conf=cdmw_nar_integ.xml --trace=CdmwRepository</Arguments>
				<Rundir>/data</Rundir>
			</Process-definition>
			<Repository Id="REPOSITORY">
				<Process-name>Repository</Process-name>
			</Repository>
			<Applications>
				<Application Name="Repository" AgentIorFile="ApplicationAgent.ior">
					<Start>
						<Services>
							<Process-name>Repository</Process-name>
						</Services>
					</Start>
				</Application>
				<Application Name="RepositoryCollector" AgentIorFile="ApplicationAgent.ior">
					<Start>
						<Services>
							<Process-name>Agent</Process-name>
						</Services>
						<Processes>
							<Process-name>RepositoryCollector</Process-name>
						</Processes>
					</Start>
					<Program-definition>
						<Program-name>TraceCollector</Program-name>
						<Path>/exec/tracecollector</Path>
					</Program-definition>
					<Process-definition type="UserProcess" Repository="REPOSITORY">
						<Process-name>RepositoryCollector</Process-name>
						<Program-name>TraceCollector</Program-name>
						<Arguments>--collector-name=repository_collector --traceProducer-path CdmwRepository/TRACE/TraceProducer</Arguments>
						<Rundir>/data</Rundir>
					</Process-definition>
				</Application>
				<Application Name="NamingInterfaceTest" AgentIorFile="ApplicationAgent.ior">
					<Start>
						<Services>
							<Process-name>Agent</Process-name>
						</Services>
						<Processes>
							<Process-name>NamingInterfaceTest</Process-name>
						</Processes>
					</Start>
					<Program-definition>
						<Program-name>NamingInterfaceTest</Program-name>
						<Path>/exec/testNI</Path>
					</Program-definition>
					<Process-definition type="UserProcess" Repository="REPOSITORY">
						<Process-name>NamingInterfaceTest</Process-name>
						<Program-name>NamingInterfaceTest</Program-name>
						<Rundir>/data</Rundir>
					</Process-definition>
				</Application>
			</Applications>
		</Host>
	</Hosts>
</System>

