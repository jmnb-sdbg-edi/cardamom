<!DOCTYPE System SYSTEM "@cdmw_home@/share/CdmwPlatformMngtSystem.dtd">

<!-- ***************** -->
<!-- System definition -->
<!--                   -->
<!-- ***************** -->
<System Name="PlatformMngt Tutorial" Port="21869">

    <!-- Default timeouts for processes of the entire system -->
	<Timeout Init="20000" Run="20000" Stop="20000"/>

    <!-- Default monitorings for the entire system -->
	<Host-monitoring Pull-interval="10000" Pull-timeout="3000"/>
	<App-monitoring  Pull-interval="0" Pull-timeout="0"/>
    <Proc-monitoring Model="NO_MONITORING"
                     Pull-interval="0" Pull-timeout="0"
                     Push-interval="0" Push-timeout="0"/>

    <!-- Hosts of the system -->
	<Host
        Name="localhost"
        App-exec-path="@cdmw_home@/bin/cdmw_platform_application" 
        Agent-exec-path="@cdmw_home@/bin/cdmw_platform_agent" 
        Probe-exec-path="@cdmw_home@/bin/cdmw_host_probe"/>

    <!-- ************************************* -->
    <!-- Application definitions of the system -->
    <!--                                       -->
    <!-- ************************************* -->
	<Application
        Name="A1"
        Host-name="localhost"
        Agent-port="-1"
        App-port="-1">

        <Managed-process
            Name="P1"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./process.sh"
            Args=""
            Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
            Name="P2"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./process.sh"
            Args=""
            Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
            Name="P3"
            Host-name="localhost"
            Type="MANAGED-PROCESS"
            Autoended="FALSE"
            Exec-path="./process.sh"
            Args=""
            Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="P1"/>
            <Graph-element Name="P2"/>
            <Graph-element Name="P3"/>

            <Graph-element-root Name="P1"/>
            <Graph-element-root Name="P2"/>
            <Graph-element-root Name="P3"/>
        </Init-graph>

    <!-- ****************************** -->
    <!--                                -->
    <!-- End of application definitions -->
    <!-- ****************************** -->
    </Application>

    <!-- Init graph of applications of the system-->
    <Init-graph>
        <Graph-element Name="A1"/> 

        <Graph-element-root Name="A1"/>
    </Init-graph>

<!-- ************************ -->
<!--                          -->
<!-- End of system definition -->
<!-- ************************ -->
</System>
