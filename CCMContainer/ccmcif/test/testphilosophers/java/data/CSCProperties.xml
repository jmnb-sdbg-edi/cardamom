<config>
    <csc name="testphilosophers" owner="CCMContainer" lang="java" type="unit-test">
        <deliveries>
            <delivery basename="Philo" type="lib" visibility="private">
                <condition antfile="Conditions.xml" target="-check-not-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/testutils
                            Foundation/ossupport
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcontaineridl
                        </libraries>
                        <generatedfilesfrom>
                            DinnerExecutor.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        CCMForkHomeImpl.java
                        CCMForkImpl.java
                        CCMForkManagerImpl.java
                        CCMObserverHomeImpl.java
                        CCMObserverImpl.java
                        CCMPhilosopherHomeImpl.java
                        CCMPhilosopherImpl.java
                        CCMRegistratorHomeImpl.java
                        CCMRegistratorImpl.java
                        StatusInfoFactoryImpl.java
                        StatusInfoImpl.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Philo_cif.idl
                            UserPhilo.idl
                        </server>
                        <client/>
                    </idlfiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/testutils
                            Foundation/ossupport
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcontaineridl
                        </libraries>
                        <generatedfilesfrom>
                            DinnerExecutor.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        CCMForkHomeImpl.java
                        CCMForkImpl.java
                        CCMForkManagerImpl.java
                        CCMObserverHomeImpl.java
                        CCMObserverImpl.java
                        CCMPhilosopherHomeImpl.java
                        CCMPhilosopherImpl.java
                        CCMRegistratorHomeImpl.java
                        CCMRegistratorImpl.java
                        StatusInfoFactoryImpl.java
                        StatusInfoImpl.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Philo_cif.idl
                            UserPhilo.idl
                        </server>
                        <client/>
                    </idlfiles>
                    <addidlflags>
                        -i2jpackagefile @this.csc.data.dir@${FS}package.txt
                    </addidlflags>
                </condition>
            </delivery>
            <delivery basename="main" type="exe" visibility="private">
                <condition antfile="Conditions.xml" target="-check-not-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/orbsupport
                            Foundation/testutils
                            LifeCycle/lifecycle
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcommon
                            CCMContainer/ccmcontainer
                            CCMContainer/ccmcontaineridl
                            CCMContainer/ccmcif
                            CCMContainer/ccmdeploymentutil
                            Repository/repositoryidl
                            Repository/naminginterface
                            Repository/repositoryinterface
                            ConfAndPlug/cdmwinit
                            SystemMngt/systemmngtidl
                            SystemMngt/platformidl
                            SystemMngt/processadmintools
                            Event/eventidl
                            Repository/simrepository
                            ccmcif/test/testphilosophers/Philo
                        </libraries>
                        <generatedfilesfrom>
                            ComponentServer.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        MainTest.java
                        NonCdmwStatusInfoConsumerImpl.java
                        ClientThread.java
                        PhiloTest.java
                        TypedPhiloTest.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Cdmw_Philo_cif.idl
                        </server>
                        <client/>
                        <tie>
                            Philo_cif.idl
                            Cdmw_Philo_cif.idl
                        </tie>
                    </idlfiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-JacORB">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/orbsupport
                            Foundation/testutils
                            LifeCycle/lifecycle
                            LifeCycle/lifecycleidl
                            CCMContainer/ccmcommon
                            CCMContainer/ccmcontainer
                            CCMContainer/ccmcontaineridl
                            CCMContainer/ccmcif
                            CCMContainer/ccmdeploymentutil
                            Repository/repositoryidl
                            Repository/naminginterface
                            Repository/repositoryinterface
                            ConfAndPlug/cdmwinit
                            SystemMngt/systemmngtidl
                            SystemMngt/platformidl
                            SystemMngt/processadmintools
                            Event/eventidl
                            Repository/simrepository
                            ccmcif/test/testphilosophers/Philo
                        </libraries>
                        <generatedfilesfrom>
                            ComponentServer.xml
                        </generatedfilesfrom>
                    </prerequisites>
                    <sourcefiles>
                        MainTest.java
                        NonCdmwStatusInfoConsumerImpl.java
                        ClientThread.java
                        PhiloTest.java
                        TypedPhiloTest.java
                    </sourcefiles>
                    <idlfiles>
                        <server>
                            Cdmw_Philo_cif.idl
                        </server>
                        <client/>
                        <tie>
                            Philo_cif.idl
                            Cdmw_Philo_cif.idl
                        </tie>
                    </idlfiles>
                    <addidlflags>
                        -i2jpackagefile @this.csc.data.dir@${FS}package.txt
                    </addidlflags>
                </condition>
            </delivery>
        </deliveries>
        <runtest>
            <condition antfile="Conditions.xml" target="-check-not-JacORB">
                <test name="main" nbtestable="10">
                    <neededfiles>
                        Event/eventchannelmanager/EventChannelManager_Desc.dtd
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannelManager.xml
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannel_Desc.dtd
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannelConf1.xml
                        CCMContainer/ccmcif/test/testphilosophers/java/obtest.conf
                    </neededfiles>
                    <neededprocesses>
                        Event/eventchannelmanager/cdmw_event_channel_manager
                    </neededprocesses>
                    <neededjarfiles>
                        Event/eventchannelmanager/eventchannelmanager
                    </neededjarfiles>
                </test>
            </condition>
            <condition antfile="Conditions.xml" target="-check-JacORB">
                <test name="main" nbtestable="10">
                    <testattributes>
                        -Djacorb.implname=StandardImplName
                    </testattributes>
                    <neededfiles>
                        Event/eventchannelmanager/EventChannelManager_Desc.dtd
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannelManager.xml
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannel_Desc.dtd
                        CCMContainer/ccmcif/test/testphilosophers/java/EventChannelConf1.xml
                        CCMContainer/ccmcif/test/testphilosophers/java/obtest.conf
                    </neededfiles>
                    <neededprocesses>
                        Repository/simrepository/cdmw_simulated_repository
                        Event/eventchannelmanager/cdmw_event_channel_manager
                        Event/eventadmin/cdmw_event_admin
                    </neededprocesses>
                    <neededjarfiles>
                        Event/eventinterface/eventinterface
                    </neededjarfiles>
                </test>
            </condition>
        </runtest>
    </csc>
</config>


