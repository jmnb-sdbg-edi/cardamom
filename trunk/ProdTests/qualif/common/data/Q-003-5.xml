<!DOCTYPE System SYSTEM "CdmwPlatformMngtSystem.dtd">

<!-- ***************** -->
<!-- System definition -->
<!--                   -->
<!-- ***************** -->
<System Name="Validation" Port="21869">

    <!-- Default timeouts for processes of the entire system -->
	<Timeout Init="20000" Run="20000" Stop="20000"/>

    <!-- Default monitorings for the entire system -->
	<Host-monitoring Pull-interval="1000" Pull-timeout="1500"/>
	<App-monitoring  Pull-interval="060" Pull-timeout="070"/>
    <Proc-monitoring Model="NO_MONITORING"
                     Pull-interval="021" Pull-timeout="031"
                     Push-interval="041" Push-timeout="051"/>

    <!-- Services of the system -->
	<Service Name="NamingAndRepositoryService"
             App-name="CdmwServices"
             Process-name="Repository"/>

    <!-- Hosts of the system -->
	<Host Name="@hostname1val@"
          App-exec-path="cdmw_platform_application"
          Agent-exec-path="cdmw_platform_agent"
          Probe-exec-path="cdmw_host_probe"/>

	<Host Name="@hostname2val@"
          App-exec-path="cdmw_platform_application"
          Agent-exec-path="cdmw_platform_agent"
          Probe-exec-path="cdmw_host_probe">
	    <Host-monitoring Pull-interval="2000" Pull-timeout="2500"/>
    </Host>

    <!-- ********************** -->
    <!-- Application definition -->
    <!--                        -->
    <!-- ********************** -->
	<Application Name="CdmwServices"
                 Host-name="localhost"
                 Agent-port="-1"
                 App-port="-1">

        <!-- Default timeouts for processes of this application -->
	    <Timeout Init="20000" Run="20000" Stop="20000"/>

        <!-- Monitoring of this application -->
    	<App-monitoring Pull-interval="021" Pull-timeout="031"/>


        <!-- ******************* -->
        <!-- Process definitions -->
        <!--                     -->
        <!-- ******************* -->
		<Managed-process Name="Repository"
                         Host-name="@hostname1val@"
                         Type="SERVICE-PROVIDER"
                         Autoended="FALSE"
                         Exec-path="cdmw_naming_and_repository"
                         Args="--id=GlobalRepository --conf=cdmw_nar_integ_lifecycle.xml"
                         Port="22456">
			<Init-step Name="initialisation" Timeout="10000"/>
			<Run-timeout Timeout="10000"/>
			<Stop-timeout Timeout="10000"/>
		</Managed-process>

		  <!-- ************************** -->
        <!--                            -->
        <!-- End of process definitions -->
        <!-- ************************** -->

        <!-- Init graph of processes of this application -->
                <Init-graph>
            <Graph-element Name="Repository">
            </Graph-element>
            <Graph-element-root Name="Repository"/>
        </Init-graph>

    <!-- ***************************** -->
    <!--                               -->
    <!-- End of application definition -->
    <!-- ***************************** -->
	</Application>

	 <!-- ********************** -->
    <!-- Application definition -->
    <!--                        -->
    <!-- ********************** -->
	<Application Name="LifeCycleTest"
                 Host-name="@hostname1val@"
                 Agent-port="-1"
                 App-port="-1">

        <!-- Default timeouts for processes of this application -->
	    <Timeout Init="20000" Run="20000" Stop="20000"/>

        <!-- Monitoring of this application -->
    	<App-monitoring Pull-interval="021" Pull-timeout="031"/>


        <!-- ******************* -->
        <!-- Process definitions -->
        <!--                     -->
        <!-- ******************* -->


	    <Managed-process Name="LifeCycleServer1"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="server1.sh"
                         Args="--CdmwXMLFile=Java_Server1.xml --validateXML"
                         Port="-1">
			<Init-step Name="step0" Timeout="10000"/>
		</Managed-process>

		<Managed-process Name="LifeCycleServer2"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="server2"
                         Args="--CdmwXMLFile=Server2.xml --validateXML"
                         Port="-1">
			<Init-step Name="step0" Timeout="10000"/>
		</Managed-process>

		<Managed-process Name="LifeCycleClient"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="client.sh"
                         Args="--CdmwXMLFile=Java_Client.xml --validateXML"
                         Port="-1">
			<Init-step Name="step0" Timeout="10000"/>
		</Managed-process>



        <!-- ************************** -->
        <!--                            -->
        <!-- End of process definitions -->
        <!-- ************************** -->

        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="LifeCycleServer1">
            </Graph-element>
            <Graph-element Name="LifeCycleServer2">
				    <Graph-element-successor Name="LifeCycleClient"/>
            </Graph-element>
            <Graph-element-root Name="LifeCycleServer1"/>
            <Graph-element-root Name="LifeCycleServer2"/>
        </Init-graph>

		  <!-- Stop graph of processes of this application -->
        <Stop-graph>
             <Graph-element Name="LifeCycleClient">
                <Graph-element-successor Name="LifeCycleServer1"/>
                <Graph-element-successor Name="LifeCycleServer2"/>
             </Graph-element>
             <Graph-element-root Name="LifeCycleClient"/>
        </Stop-graph>


    <!-- ***************************** -->
    <!--                               -->
    <!-- End of application definition -->
    <!-- ***************************** -->
	</Application>

    <!-- Init graph of applications of the system-->
    <Init-graph>
        <Graph-element Name="CdmwServices"> 
            <Graph-element-successor Name="LifeCycleTest"/>
        </Graph-element>
        <Graph-element-root Name="CdmwServices"/> 
    </Init-graph>

</System>
<!-- ************************ -->
<!--                          -->
<!-- End of system definition -->
<!-- ************************ -->

