<config>
    <csc name="testFTSupervision" owner="SystemMngt" lang="c++" type="unit-test">
        <deliveries>
            <delivery basename="cdmw_test_FT_suspervision" type="exe" visibility="private">
                <condition antfile="Conditions.xml" target="-check-FaultTolerance">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/testutils
                            Foundation/commonidl
                            Foundation/pullmonitorableidl
                            Foundation/cosnotificationidl  
                            Foundation/ossupport
                            Foundation/osthreads
                            Foundation/logging
                            Foundation/orbsupport
                            Foundation/commonsvcsnaming
                            Foundation/commonsvcsdatastore
                            FaultTolerance/faulttoleranceidl
                            FaultTolerance/monitoringidl
                            FaultTolerance/ftcommon
                            FaultTolerance/ftrequestlogging
                            FaultTolerance/ftinit
                            FaultTolerance/ftrequestlogging
                            FaultTolerance/ftlocationmanager
                            FaultTolerance/ftstatemanager
                            FaultTolerance/ftreplicationmanager
                            idllib/smgcommonidl
                            idllib/systemmngtidl
                            platformvaluetypes/platformvaluetypes
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        main.cpp
                        PILOT_System.cpp
                        SIM_FaultNotifier.cpp
                        SIM_FaultDetector.cpp
                        SIM_FaultManager.cpp
                        TypeRepositoryStub.cpp
                    </sourcefiles>
                    <idlfiles>
                        <server/>
                        <client/>
                        <requireidlsfrom>
                            Foundation
                        </requireidlsfrom>
                    </idlfiles>
                    <addldflags>
			-lcppunit
                        @config.FaultTolerance.ORB.Libs@
                    </addldflags>
                </condition>
            </delivery>
        </deliveries>
        <runtest>
            <test name="cdmw_test_FT_suspervision">
                <neededfiles>
                    SystemMngt/platformftsystem/test/testFTSupervision/system.xml
                    SystemMngt/platformftsystem/test/testFTSupervision/CdmwSystemMngtDatastoreConfig.xml
                    SystemMngt/platformftsystem/CdmwSystemMngtDatastore_Desc.dtd
                    SystemMngt/platformftsystem/test/testFTSupervision/CdmwFTSystemMngtGroupCreator_conf.xml
                    FaultTolerance/ftgroupcreator/CdmwFaultToleranceGroupCreator.dtd
                    SystemMngt/platformftsystem/test/testFTSupervision/CdmwFaultToleranceManager_conf.xml
                    FaultTolerance/ftmanager/CdmwFaultToleranceManager.dtd
                    SystemMngt/platformadmin/CdmwPlatformMngtSystem.dtd
                    SystemMngt/platformdaemon/cdmw_platform_daemon_monitoring.sh
                    SystemMngt/platformdaemon/cdmw_platform_daemon.sh
                    SystemMngt/platformdaemon/CdmwPlatformMngtDaemon.dtd
                    SystemMngt/platformftsystem/test/testFTSupervision/CdmwPlatformMngtDaemon_conf.xml
                    SystemMngt/platformlibrary/cdmw_platform_kill_pid.sh
                    SystemMngt/platformlibrary/cdmw_platform_kill_all_pids.sh
                    SystemMngt/platformlibrary/cdmw_platform_launch_process.sh
                </neededfiles>
                <neededprocesses>
                    SystemMngt/platformdaemon/cdmw_platform_daemon
                    SystemMngt/platformftsystem/cdmw_platform_supervision
                    SystemMngt/platformadmin/cdmw_platform_admin
                    SystemMngt/platforminterface/test/testmanagedprocess/cdmw_test_managed_process
                    FaultTolerance/ftmanager/cdmw_ft_manager
                </neededprocesses>
            </test>
        </runtest>
    </csc>
</config>

