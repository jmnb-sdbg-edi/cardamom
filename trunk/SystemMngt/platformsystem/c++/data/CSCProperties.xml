<config>
    <csc name="platformsystem" owner="SystemMngt" lang="c++">
        <deliveries>
            <delivery basename="cdmw_platform_supervision" type="exe" visibility="public">
                <condition antfile="Conditions.xml" target="-check-NoFaultTolerance">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/commonidl
                            Foundation/ossupport
                            Foundation/osthreads
                            Foundation/orbsupport
                            idllib/platformidl
                            platformvaluetypes/platformvaluetypes
                            platformlibrary/platformlibrary
                            platformapplicationlibrary/platformapplicationlibrary
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        ApplicationInit.cpp
                        ApplicationObserver_impl.cpp
                        ApplicationRun.cpp
                        ApplicationStop.cpp
                        CentralisedSupervisionObserver_impl.cpp
                        CentralisedSupervisionSystem_impl.cpp
                        DaemonMonitor.cpp
                        DistributedSupervisionObserver_impl.cpp
                        DistributedSupervisionSystem_impl.cpp
                        HostContainer.cpp
                        HostContainer_impl.cpp
                        HostProxy_impl.cpp
                        main.cpp
                        RunSetManager.cpp
                        ServiceBinding_impl.cpp
                        SystemEntityObserver_impl.cpp
                        System_impl.cpp
                        SystemLogMngr.cpp
                        SystemStates.cpp
                    </sourcefiles>
                    <idlfiles>
                        <server/>
                        <client/>
                        <requireidlsfrom>
                            Foundation
                        </requireidlsfrom>
                    </idlfiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-FaultTolerance">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/commonidl
                            Foundation/ossupport
                            Foundation/osthreads
                            Foundation/orbsupport
                            Repository/naminginterface
                            FaultTolerance/faulttoleranceidl
                            FaultTolerance/monitoringidl
                            FaultTolerance/ftcommon
                            FaultTolerance/ftinit
                            FaultTolerance/ftstatemanager
                            FaultTolerance/ftlocationmanager
                            idllib/platformidl
                            platformvaluetypes/platformvaluetypes
                            platformlibrary/platformlibrary
                            platformapplicationlibrary/platformapplicationlibrary
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        ApplicationInit.cpp
                        ApplicationObserver_impl.cpp
                        ApplicationRun.cpp
                        ApplicationStop.cpp
                        CentralisedSupervisionObserver_impl.cpp
                        CentralisedSupervisionSystem_impl.cpp
                        DaemonMonitor.cpp
                        DistributedSupervisionObserver_impl.cpp
                        DistributedSupervisionSystem_impl.cpp
                        HostContainer.cpp
                        HostContainer_impl.cpp
                        HostProxy_impl.cpp
                        main.cpp
                        RunSetManager.cpp
                        ServiceBinding_impl.cpp
                        SystemEntityObserver_impl.cpp
                        System_impl.cpp
                        SystemLogMngr.cpp
                        SystemStates.cpp
                        FTConverter_impl.cpp
                    </sourcefiles>
                    <idlfiles>
                        <server/>
                        <client/>
                        <requireidlsfrom>
                            Foundation
                        </requireidlsfrom>
                    </idlfiles>
                    <addcflags>
                        -DCDMW_USE_FAULTTOLERANCE
                    </addcflags>
                    <addldflags>
                        @config.FaultTolerance.ORB.Libs@
                    </addldflags> 
                </condition>
            </delivery>
        </deliveries>
    </csc>
</config>

