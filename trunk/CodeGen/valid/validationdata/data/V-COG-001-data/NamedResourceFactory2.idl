#ifndef NAMEDRESOURCEFACTORY2_IDL_
#define NAMEDRESOURCEFACTORY2_IDL_

#include <CdmwLifeCycle.idl>
#include "CF.idl"

#pragma prefix "thalesgroup.com"

module CFFactories
{
   interface NamedResourceFactory2 : CdmwLifeCycle::FactoryBase {

      CF::Resource create_resource2
      (
         in CdmwLifeCycle::Key object_key, // name of the object in the repository
         in CF::ResourceNumType resourceNumber, //none
         in CF::Properties qualifiers //none
      ) 
      raises
      (
         CdmwLifeCycle::AlreadyExistant, 
         CdmwLifeCycle::InvalidName,
         CF::InvalidResourceNumber, 
         CF::InvalidProperties, 
         CF::CreationError
      );

      CF::Device create_device2
      (
         in CdmwLifeCycle::Key object_key, // name of the object in the repository
         in CF::Device::Location label //none
      ) 
      raises
      (
         CdmwLifeCycle::AlreadyExistant, 
         CdmwLifeCycle::InvalidName,
         CF::Device::InvalidLocation
      );

      CF::Application create_application2
      (
         in CdmwLifeCycle::Key object_key, // name of the object in the repository
         in string name //none
      ) 
      raises
      (
         CdmwLifeCycle::AlreadyExistant, 
         CdmwLifeCycle::InvalidName,
         CF::CreateApplicationError
      );
   }; // end of interface NamedResourceFactory2
};  // end of module

#endif // NAMEDRESOURCEFACTORY2_IDL_

