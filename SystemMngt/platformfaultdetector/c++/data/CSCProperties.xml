<config>
    <csc name="platformfaultdetector" owner="SystemMngt" lang="c++">
        <deliveries>
            <delivery basename="platformfaultdetector" type="lib" visibility="public">
                <condition antfile="Conditions.xml" target="-check-NoFaultTolerance">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/osthreads
                            Foundation/logging
                            Foundation/orbsupport
                            Foundation/pullmonitorableidl
                            platformlibrary/platforminternallibrary
                            idllib/systemmngtidl
                            idllib/daemonidl
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        *
                    </sourcefiles>
                </condition>
                <condition antfile="Conditions.xml" target="-check-FaultTolerance">
                    <prerequisites>
                        <libraries>
                            Foundation/common
                            Foundation/ossupport
                            Foundation/osthreads
                            Foundation/logging
                            Foundation/orbsupport
                            Foundation/pullmonitorableidl
                            FaultTolerance/faulttoleranceidl
                            platformlibrary/platforminternallibrary
                            idllib/systemmngtidl
                            idllib/daemonidl
                        </libraries>
                    </prerequisites>
                    <sourcefiles>
                        *
                    </sourcefiles>
                    <addcflags>
                        -DCDMW_USE_FAULTTOLERANCE
                    </addcflags>
                </condition>
            </delivery>
        </deliveries>
    </csc>
</config>

