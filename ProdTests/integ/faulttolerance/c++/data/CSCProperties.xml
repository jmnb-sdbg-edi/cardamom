<config>
    <csc name="faulttolerance" owner="ProdTests" lang="c++" type="integration-test">
        <deliveries>
            <delivery basename="cdmw_test_ft_init" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/processadmintools
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface                     
                        ConfAndPlug/cdmwinit
                        LifeCycle/lifecycleidl
                        FaultTolerance/faulttoleranceidl
                        FaultTolerance/ftinit
                        FaultTolerance/ftlocationmanager
                    </libraries>
                    <generatedfilesfrom>
                        Main.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    TestFTInit.cpp
                    TestUtils.cpp
                    main_main.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>
                        Foundation
                        LifeCycle
                    </requireidlsfrom>
                </idlfiles>
                <addldflags>
                    @config.FaultTolerance.ORB.Libs@
                </addldflags>
            </delivery>
            <delivery basename="test_server" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/processadmintools
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface                     
                        ConfAndPlug/cdmwinit
                        LifeCycle/lifecycleidl
                        FaultTolerance/faulttoleranceidl
                        FaultTolerance/ftinit
                        FaultTolerance/ftlocationmanager
                    </libraries>
                    <generatedfilesfrom>
                        Server.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    TestHello_impl.cpp
                    main_server.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestHello.idl
                    </server>
                    <client/>
                    <requireidlsfrom>
                        Foundation
                        LifeCycle
                    </requireidlsfrom>
                </idlfiles>
                <addldflags>
                    @config.FaultTolerance.ORB.Libs@
                </addldflags>
            </delivery>
        </deliveries>
    </csc>
</config>


