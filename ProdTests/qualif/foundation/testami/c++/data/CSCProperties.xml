<config>
    <csc name="testami" owner="ProdTests" lang="c++" type="qualification-test">
        <deliveries>
            <delivery basename="test_ami_server" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/processadmintools
                        LifeCycle/lifecycleidl
                        LifeCycle/lifecycleinit
                        LifeCycle/lifecycle
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        ConfAndPlug/cdmwinit
                    </libraries>
                    <generatedfilesfrom>
                        Main.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    server.cpp
                    ServerProcessControl.cpp
                    Server_impl.cpp
                </sourcefiles>
                <idlfiles>
                    <server>
                        TestAMI.idl
                    </server>
                    <client/>
                </idlfiles>
            </delivery>
            
            <delivery basename="test_ami_client" type="exe" visibility="private">
                <prerequisites>
                    <libraries>
                        Foundation/common
                        Foundation/testutils
                        Foundation/commonidl
                        Foundation/ossupport
                        Foundation/osthreads
                        Foundation/orbsupport
                        SystemMngt/systemmngtidl
                        SystemMngt/platformidl
                        SystemMngt/platformlibrary
                        SystemMngt/platforminterface
                        SystemMngt/platformvaluetypes
                        SystemMngt/processadmintools
                        LifeCycle/lifecycleidl
                        LifeCycle/lifecycleinit
                        LifeCycle/lifecycle
                        Repository/repositoryidl
                        Repository/naminginterface
                        Repository/repositoryinterface
                        ConfAndPlug/cdmwinit
                    </libraries>
                    <generatedfilesfrom>
                        Main.xml
                    </generatedfilesfrom>
                </prerequisites>
                <sourcefiles>
                    client.cpp
                    ClientProcessControl.cpp
                    ServerHandler_impl.cpp
                </sourcefiles>
                <idlfiles>
                    <server/>
                    <client>
                        TestAMI.idl
                    </client>
                </idlfiles>
                <addidlflags>
                    @config.orbcpp.idlflags.ami@
                </addidlflags>
            </delivery>
            
            <delivery basename="testamidata" type="data" visibility="private">
                <sourcefiles>
                    TestAMI.xml
                </sourcefiles>
            </delivery>               
        </deliveries>
    </csc>
</config>


