        <Timeout Init="100000" Run="100000" Stop="100000"/>

        <Managed-process
                         Name="P71"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="launchFaultToleranceClient1.sh"
                         Args="--host1=@hostname1val@ --host2=@hostname2val@ --host3=@hostname3val@ --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
