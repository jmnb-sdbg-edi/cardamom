        <Managed-process
                         Name="P61"
                         Host-name="@hostname3val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="cdmw_faulttolerance_server"
                         Args="--HostName=@hostname3val@ --HelloInterface2 --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
                         Name="P62"
