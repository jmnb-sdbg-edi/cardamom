                         Args="--HostName=@hostname2val@ --HelloInterface2 --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>
        
        <Managed-process
                         Name="P42"
                         Host-name="@hostname2val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="cdmw_faulttolerance_server"
                         Args="--HostName=@hostname2val@ --HelloInterface3  --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
                         Port="-1">
