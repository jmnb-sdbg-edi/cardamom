                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="cdmw_faulttolerance_server"
                         Args="--HostName=@hostname1val@ --HelloInterface2 --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <Managed-process
                         Name="P22"
                         Host-name="@hostname1val@"
                         Type="MANAGED-PROCESS"
                         Autoended="FALSE"
                         Exec-path="cdmw_faulttolerance_server"
                         Args="--HostName=@hostname1val@ --HelloInterface3  --CdmwXMLFile=Q-031-data/HelloFaultTolerance.xml --validateXML"
                         Port="-1">
            <Init-step Name="step0"/>
        </Managed-process>

        <!-- Init graph of processes of this application -->
        <Init-graph>
            <Graph-element Name="P21">
                <Graph-element-successor Name="P22"/>
            </Graph-element>
            <Graph-element Name="P22">
            </Graph-element>
            <Graph-element-root Name="P21"/>
        </Init-graph>
    </Application>

    <Application
                 Name="APPL3"
