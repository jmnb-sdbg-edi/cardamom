HOST_TYPE=`@cdmw_home@/bin/config.guess`
ORB_JAVA="`cat @cdmw_home@/demos/demo_philosophers/java/site.mk | grep 'ORB=' |cut -d= -f2`"
PACK_TMP_DIR=/tmp/PhilosophersDemoPack_tmp

# clean tmp directory
rm -rf $PACK_TMP_DIR
mkdir -p $PACK_TMP_DIR/meta-inf

# add descriptor files
echo Adding descriptor files...
cp @cdmw_home@/demos/demo_philosophers/c++/data/Dinner.cad $PACK_TMP_DIR/meta-inf
cp @cdmw_home@/demos/demo_philosophers/c++/data/*.ccd $PACK_TMP_DIR
for f in Fork Philosopher Registrator; do
    cp @cdmw_home@/demos/demo_philosophers/java/data/$f.csd $PACK_TMP_DIR/
done
cp @cdmw_home@/demos/demo_philosophers/c++/data/Observer.csd $PACK_TMP_DIR/

# add IDL files
echo Adding IDL files...
cp @cdmw_home@/demos/demo_philosophers/c++/idl/Philo.idl $PACK_TMP_DIR

# add libraries
echo Adding C++ libraries...
ln -s @cdmw_home@/demos/demo_philosophers/c++/$HOST_TYPE/libObserver.so \
        $PACK_TMP_DIR/libObserver.so

echo Adding Java libraries...
for f in ForkManager Philosopher Registrator; do
    ln -s @cdmw_home@/demos/demo_philosophers/java/prod/$ORB_JAVA/lib$f.jar \
        $PACK_TMP_DIR/lib$f.jar
done

# create the assembly archive
echo Creating the assembly archive...
(cd $PACK_TMP_DIR && zip -r @cdmw_home@/demos/demo_philosophers/c++/$HOST_TYPE/Dinner_3.aar *)
rm -fr $PACK_TMP_DIR
