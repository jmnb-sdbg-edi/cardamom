<project name="ExportTokens" default="-export-tokens" basedir=".">


    <description>
        This build file generate tokens for parametrized data files.
    </description>


    <target name="-export-tokens">
        <!-- Install -->
        <propertyfile file="${mb.install.tokens.properties}">
            <entry key="CDMW_LIFECYCLE_LIB_JAR_PATH"
                   value="${config.install.dir}${FS}lib${FS}java"/>
            <entry key="CDMW_LIFECYCLE_LIB_PATH"
                   value="${config.install.dir}${FS}lib${FS}c++"/>
        </propertyfile>

        <!-- Dev -->
        <var name="p1" value="${config.LifeCycle.location}${FS}"/>
        <var name="p1" value="${p1}${config.delivery.dir}${FS}"/>
        <var name="p1" value="${p1}${config.delivery.library.dir}${FS}"/>
        <var name="p1" value="${p1}${config.LifeCycle.java.orb}-"/>
        <var name="p1" value="${p1}${config.LifeCycle.java.orb.ver}"/>

        <var name="p2" value="${config.LifeCycle.location}${FS}"/>
        <var name="p2" value="${p2}${config.delivery.dir}${FS}"/>
        <var name="p2" value="${p2}${config.delivery.library.dir}${FS}"/>
        <var name="p2" value="${p2}${config.site.csn}-"/>
        <var name="p2" value="${p2}${config.LifeCycle.cpp.compiler}-"/>
        <var name="p2" value="${p2}${config.LifeCycle.cpp.compiler.ver}-"/>
        <var name="p2" value="${p2}${config.LifeCycle.cpp.orb}-"/>
        <var name="p2" value="${p2}${config.LifeCycle.cpp.orb.ver}"/>

        <propertyfile file="${mb.dev.tokens.properties}">
            <entry key="CDMW_LIFECYCLE_LIB_JAR_PATH" value="${p1}"/>
            <entry key="CDMW_LIFECYCLE_LIB_PATH" value="${p2}"/>
        </propertyfile>
    </target>
        
</project>


